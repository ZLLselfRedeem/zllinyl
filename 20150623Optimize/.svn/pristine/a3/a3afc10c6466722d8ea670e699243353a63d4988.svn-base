*{
    margin: 0;
    padding: 0;
}
body{
    min-width:100%;
    min-height: 100%;
    font-size: 13px;
    line-height: 2em;
    font-family:Microsoft YaHei,Tahoma,simsun;
    color: #444;
    width: 100%;
    background: #fff;
    padding-bottom: 50px;
}

li{
    list-style-type: none;
}
.float_right{
    float: right;
}
.display_block{
    display: block;
}

.show{
    display: block;
}
.hide{
    display: none;
}
.downLoadUX{
    margin: 0 auto;
    width: 70%;
    height: 48px;
    line-height: 48px;
    text-align: center;
    color: #a3003c;
    background-color: #fdcd00;
    border: none;
    border-radius: 4px;
    margin-top: 30px;
    font-size: 1.5em;
}

.box, .gotten, .activityOver, .unfind, .redEnvelope, .suitable-shop, .activityRule, .whatisUX{
    img{
        width: 100%;
    }
}

.box, .gotten, .activityOver{
    position: relative;
    overflow: hidden;
    text-align: center;
    
    .info{
        position: absolute;
        bottom: 20px;
        left: 0;
        width: 100%;
        
        p{
            width: 100%;
            color: #fff;
        }
        
        .money{
            font-size: 2em;
            color: #fff766;
            margin-bottom: 40px;
            span{
                font-size: 1.5em;
            }
        }
        .con{
            input{
                border-radius: 4px;
                height: 48px;
                font-size: 1.5em;
            }
            input[type='tel']{
                width: 55%;
                border: 1px solid #ccc;
                padding: 0 5px;
                color: #444;
            }
            input[type='button']{
                margin-left: 7px;
                width: 30%;
                background-color: #fdcd00;
                border: none;
                color: #a3003c;
            }
        }
        .desc{
            margin: 0;
        }
    }
}
.gotten{
    text-align: center;
    .info{
        .money{
            margin-bottom: 10px;
        }
        .con{
            color: #fff;
            a{
                padding: 10px;
                color: blue;
                text-decoration: underline;
            }
        }
    }
}

.redEnvelope, .suitable-shop, .activityRule, .whatisUX{
    padding: 35px 15px 0 15px;
    color: #736852;
    
    .title{
        position: relative;
        border-top: 1px solid #bfb399;
        text-align: center;
        //margin-top: 35px;
        
        span{
            position: relative;
            top: -13px;
            padding: 0 35px;
            background: #fff;
            color: #444;
            font-size: 1.2em;
        }
    }
    
    ol{
        li{
            list-style-type: decimal;
            margin-left: 20px;
        }
    }
}

.redEnvelope{
    ul{
        li{
            padding: 5px 0;
            border-bottom: 1px dashed #c4b9a6;
            span{
                
            }
            .allGet{
                color: #e60000;
            }
            .des{
                color: #747474;
            }
            .level{
                width: 30px;
                height: 30px;
                border-radius: 4px;
                text-align: center;
                line-height: 30px;
                color: #fff;
                font-size: 2em;
                margin-top: 10px;
            }
            .level1{
                background-color: #f7860c;
            }
            .level2{
                background-color: #ff9b2f;
            }
            .level3{
                background-color: #ffbe4a;
            }
            .level4{
                background-color: #ffc86b;
            }
            .level5{
                background-color: #ffd78f;
            }
        }
    }
}

#msgBg{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0);
    z-index: 99;
}
#showMsg{
    position: fixed;
    top: 15%;
    left: 5%;
    width: 90%;
    background: rgba(0,0,0,.8);
    box-shadow: 0 0 8px rgba(0,0,0,.9);
    border-radius: 4px;
    color: #eee;
    z-index: 100;
    
    p{
        width: 100%;
        padding: 5px 0;
        text-align: center;
    }
    .currTitle{
        font-size: 1.2em;
    }
    #newPhoneNumber{
        width: 80%;
        margin-left: 10%;
        padding: 7px 0;
        border-radius: 4px;
        border: 1px solid #aaa;
        text-indent: 1em;
        background: rgba(255,255,255,.95);
        color: #777;
    }
    .correctBtn{
        border-top: 1px solid #aaa;
        width: 50%;
        text-align: center;
        margin-top: 15px;
        float: left;
        
        a{
            display: block;
            border-right: 1px solid #aaa;
            height: 100%;
            padding: 15px 0;
            color: #eee;
            text-decoration: none;
        }
    }
}

.notBegin{
    text-align: center;
    color: #fff;
    font-size: 2em;
    
    i{
        font-size: 5em;
        color: #fff;
        margin: 80px 0 30px 0;
        animation: timePlay 1s linear infinite;
        -webkit-animation: timePlay 1s linear infinite;
        -moz-animation: timePlay 1s linear infinite;
        -o-animation: timePlay 1s linear infinite;
        -ms-animation: timePlay 1s linear infinite;
    }
    .text-center{
        margin-bottom: 20px;
    }
}
@keyframes timePlay{
    0%{ transform: rotate(0deg); }
    100%{  transform: rotate(360deg); }
}
@-webkit-keyframes timePlay{
    0%{ -webkit-transform: rotate(0deg); }
    100%{  -webkit-transform: rotate(360deg); }
}
@-moz-keyframes timePlay{
    0%{ -moz-transform: rotate(0deg); }
    100%{  -moz-transform: rotate(360deg); }
}
@-o-keyframes timePlay{
    0%{ -o-transform: rotate(0deg); }
    100%{  -o-transform: rotate(360deg); }
}
@-ms-keyframes timePlay{
    0%{ -ms-transform: rotate(0deg); }
    100%{  -ms-transform: rotate(360deg); }
}


