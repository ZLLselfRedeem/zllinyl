*{
    margin: 0;
    padding: 0;
    -webkit-tap-highlight-color: rega(0, 0, 0, 0);
    -webkit-appearance:none;
}
html,
body{
    width: 100%;
    font-size: 13px;
    font-family:Microsoft YaHei,Tahoma,simsun!important;
}
body{
    background: #f5f5f5;
    color: #666;
}
.c{
    clear: both;
    width: 0;
    height: 0;
    font-size: 0;
}
.hide{
    display: none;
}
.wrap{
    #loading{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 8;
        
        img{
            position: absolute;
            top: 50%;
            left: 50%;
            width: 50px;
            height: 50px;
            margin: -25px 0 0 -25px;
            display: block;
        }
    }
    #tipsBg{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 9;
    }
    #tips{
        position: absolute;
        top: 70px;
        left: 10%;
        width: 80%;
        padding: 15px 0;
        text-align: center;
        background: rgba(0,0,0,.8);
        color: #fff;
        border-radius: 10px;
        opacity: 0;
        z-index: 10;
    }
    .chart{
        li{
            padding: 5px 0;
            text-align: center;
            
        }
        .title{
            color: #3594d1;
            p{
                display: inline-block;
                font-size: 1.25em;
            }
        }
        .btnli{
            text-align: right;
            input{
                margin-right: 10px;
                color: #2e74a1;
                font-size: 0.9em;
                background: #ceebfd;
                border: 1px solid #75b3da;
                border-radius: 5px;
                padding: 6px 15px;
            }
        }
        #pieChart{
            margin-top: -30px;
        }
        #barChart{
            margin-left: 12%;
        }
    }
}
