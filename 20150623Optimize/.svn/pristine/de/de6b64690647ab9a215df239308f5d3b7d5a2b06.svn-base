@charset "utf-8";
/* CSS Document */

*{font-family:'microsoft yahei',Arial, Helvetica, sans-serif; outline:none;}
a{ text-decoration:none!important;}
h3, h5{ font-weight: bold;}
h3 i, h5 i { margin-right:5px;}
.bg-danger{ padding:5px 8px;}
p i{ margin-right:5px;}
p img{ width:100%; box-shadow:1px 1px 2px rgba(0,0,0,.2); border-radius:8px;}
.pans{ margin-top:50px;}
p.author{ font-weight:bold; color:#999;}
p.producename{ font-weight:bold; padding:5px 8px;}
section.last{ font-size:12px; margin-top:50px; padding:10px 15px;}
p.author button{ font-weight:normal; padding:2px 12px; font-size:12px;}
p.author button{ outline:none!important;}
section{ font-size:16px;}