*{ margin: 0; padding: 0;}
html, body{ font-size: 22px; font-family:Microsoft YaHei,Tahoma,simsun; color: #444; width: 100%;background: #f3f4f6;}
li{ list-style-type: none;}
img{ display: block;}
.c{ clear: both; width: 0; height: 0; font-size: 0;}
.hide{ display:none;}

#content{ margin: 0 auto; max-width: 640px;}

#top{ position: relative; width: 100%; color: #fff;}
#top img{ width: 100%;}
#top p{ position: absolute; top: 0; width: 50%; height: 100%; display: inline-block;}
#top .pleft{ left: 0;}
#top .pright{ right: 0;}
#top p span{ display: block; width: 100%; text-align: center; margin-top: 35px;}
#top .topPrice{ font-size: 42px;}

#choose{ width: 72%; margin: 26px 14%; border-radius: 10px; border: 2px solid #f03a3a; overflow: hidden;}
#choose a{ width: 50%; padding: 16px 0; float: left; display: block; text-align: center; color: #f03a3a; text-decoration: none;}
#choose .selected{ color: #fff; background: #f03a3a;}
#choose a:first-child{ float:left;}
#choose a:last-child{ float:right;}
#remind{ width: 100%; text-align: center; display: block; color: #888; padding-bottom: 26px;}

#redEnvelope{ width: 100%;}
#redEnvelope .redEnvelopeMain{ position: relative; width: 100%; border-bottom: 1px solid #ccc; box-shadow: 0 1px 1px #e2e2e4; background: #fff; margin-bottom: 20px; overflow: hidden;}
#redEnvelope .redEnvelopeMain .redEnvelopeImg, #content .redEnvelopeMain .redEnvelopeInfo{ display: block; float: left;}
#redEnvelope .redEnvelopeMain .redEnvelopeImg{ width: 27.5%; text-align: center;}
#redEnvelope .redEnvelopeMain .redEnvelopeImg-1{ width: 100%; border-right: 1px solid #ccc; padding: 20px 0;}
#redEnvelope .redEnvelopeMain .redEnvelopeImg img{ display: block; width: 100%;}
#redEnvelope .redEnvelopeMain .redEnvelopeImg span{ display: block;}
#redEnvelope .redEnvelopeMain .redEnvelopeInfo{ position: relative; width: 72.5%;}
#redEnvelope .redEnvelopeMain .redEnvelopeInfo .effextiveStatus{ position: absolute; top: 16px; right: 0; width: 100%; display: block;}
#redEnvelope .redEnvelopeMain .redEnvelopeInfo .price{ font-size: 42px; display: block; margin: 20px 0 20px 36px;}
#redEnvelope .redEnvelopeMain .redEnvelopeInfo .price0,
#redEnvelope .redEnvelopeMain .redEnvelopeInfo .price1{ color: #f03a3a;}
#redEnvelope .redEnvelopeMain .redEnvelopeInfo .price2,
#redEnvelope .redEnvelopeMain .redEnvelopeInfo .price3{ color: #999;}
#redEnvelope .priceDesc{ margin-left: 10px; font-size: 22px; color: #444;}
#redEnvelope .effectiveTime{ margin-left: 36px;}
.tip{ height:30px; line-height:30px; text-align:center; margin-bottom:20px;}

@media (max-width:640px){
	html, body{ font-size: 22px;}
	#top p span{ margin-top: 35px;}
	#top .topPrice{ font-size: 42px;}
	#content .redEnvelopeMain{ margin-bottom: 20px;}
	#content .redEnvelopeMain .redEnvelopeInfo .price{ font-size: 42px; margin: 20px 0 20px 36px;}
	#choose{ margin: 26px 14%;}
	#choose a{ padding: 16px 0;}
