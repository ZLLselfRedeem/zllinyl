body{
    font-size: 25px;
    font-family:Microsoft YaHei,Tahoma,simsun;
}

img{
    display: block;
}
p{
    margin: 0;
}
.c{
    width: 0;
    height: 0;
    font-size: 0;
    clear: both;
}


.loadingImg{
    position: absolute;
    top: 50%;
    width: 15%;
    left: 50%;
    margin: -7.5% 0 0 -7.5%;
}

#goGet{
    position: relative;
    /*导航*/
    .checking{
        position: fixed;
        top: 0;
        width: 100%;
        background: rgba(255,255,255,1);
        z-index: 1;
        
        ul{
            padding: 0;
            margin: 12px auto;
            width: 80%;
            overflow: hidden;
            
            li{
                list-style-type: none;
                width: 33.3%;
                padding: 7px 0;
                text-align: center;
                color: #7b7b7b;
                border: 1px solid #eaeaea;
                background: #fff;
                float: left;
            }
            li:first-child{
                border-radius: 4px 0 0 4px;
                border-right: none;
            }
            li:last-child{
                border-radius: 0 4px 4px 0;
                border-left: none;
            }
            
            .chkCur{
                color: #444;
                background: #eaeaea;
            }
        }
    }
    
    /*抵扣券浏览*/
    .conMain{
        margin-top: 60px;
        width: 100%;
        margin-bottom: 20px;
        
        a{
            display: block;
        }
        
        dl{
            border-top: 1px solid #d0d0d0;
            border-bottom: 1px solid #d0d0d0;
            margin-bottom: 10px;
            margin-left: 4%;
            width: 44%;
            float: left;
            display: block;
            
            p{
                margin: 0;
            }
            
            dd{
                position: relative;
                
                img{
                    width: 100%;
                }
                p{
                    color: #fff;
                    background: #f00;
                    padding: 4px 0;
                    text-align: center;
                }
                
                .endPic{
                    position: absolute;
                    top: 0;
                    left: 0;
                    display: none;
                }
            }
            dt{
                border-left: 1px solid #d0d0d0;
                border-right: 1px solid #d0d0d0;
                padding: 8px 6px;
                
                p{
                    color: #000203;
                }
                .shopADD{
                    font-weight: normal;
                    font-size: 0.9em;
                }
            }
        }
        .shopEndPic{
            dl{
                dd{
                    .endPic{
                        display: block;
                    }
                    p{
                       background: #6e6e6e; 
                    }
                }
            }
        }
    }
    .doload{
        padding: 5% 0;
        img{
            width: 10%;
            margin: 0 auto;
        }
    }
}

/*领取成功*/
#gotten{
    .gottenInfo{
        position: relative;
        
        img{
            width: 100%;
        }
        .info{
            position: absolute;
            bottom: 3%;
            width: 100%;
            
            p{
                color: #616161;
                text-align: center;
                margin: 0;
            }
            
            .des{
                width: 70%;
                color: #fff;
                margin-bottom: 4%;
                margin-left: 15%;
                span{
                    font-size: 1.4em;
                }
            }
            .number{
                color: #fff;
                margin-bottom: 4%;
                
                a,
                a:hover,
                a:active{
                    color: #fff834;
                    text-decoration: underline;
                    padding: 7px;
                }
            }
            .downbtn{
                margin: 0 auto 2% auto;
            }
        }
    }
    .other{
        width: 100%;
        background: #fffee3;
        overflow: hidden;
        
        .titleImg{
            width: 100%;
            margin: 18px 0;
        }
        dl{
            float: left;
            width: 44%;
            background: #fff;
            padding: 2%;
            margin-bottom: 10px;
            margin-left: 4%;
            -webkit-box-shadow: 0px 2px 5px #bbb;
            
            dd{
                img{
                    width: 100%;
                }
            }
            dt{
                p{
                    text-align: right;
                }
                #dishName{
                    text-align: left;
                    padding: 5px 0;
                }
                #oldPrice{
                    color: #888;
                }
                #nowPrice{
                    font-size: 1.3em;
                    color: #e44934;
                }
            }
        }
    }
}

/*已抢完 已过期*/
#over{
    width: 100%;
    
    img{
        width: 100%;
    }
}

/*透明黑底*/
.mask{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.8;
    z-index: 99;
}

.popupBox{
    position: fixed;
    top: 50px;
    left: 10%;
    width: 80%;
    border-radius: 0.6em;
    padding: 26px 23px;
    background: #fff;
    z-index: 100;
}

/*领取页输入手机号弹出框*/
.iptInfo{
    p{
        margin-bottom: 10px;
    }
    
    input{
        border: 1px solid #030101;
        border-radius: 0.4em;
        height: 48px;
    }
    
    #phoneNumber{
        width: 100%;
        padding: 0 1em;
    }
    
    .btn{
        width: 48%;
        background: #fff;
    }
    #confirm{
        border-color: #ff1717;
        color: #ff1717;
    }
}

/*提示 号码纠错*/
.msg{
    padding: 0;
    p{
        text-align: center;
        width: 80%;
        padding: 7px 0;
        margin: 0 10%;
        
    }
    .current{
        p:first-child{
            margin-top: 10px;
        }
        
        input{
            width: 100%;
            padding: 1em;
            border-radius: 4px;
            border: 1px solid #666;
        }
        
        ul{
            width: 100%;
            padding: 0;
            margin: 10px 0 0 0;
            border-top: 1px solid #666;
            overflow: hidden;
            
            li{
                width: 50%;
                float: left;
                text-align: center;
                list-style-type: none;
                padding: 15px 0;
            }
            #cencelCur{
                border-right: 1px solid #666;
            }
        }
    }
}

@media (max-width:640px){
    body{ font-size: 24px; }
}

@media (max-width:600px){
    body{ font-size: 23px; }
}

@media (max-width:560px){
    body{ font-size: 22px; }
}

@media (max-width:520px){
    body{ font-size: 20px; }
}

@media (max-width:480px){
    body{ font-size: 18px; }
}

@media (max-width:440px){
    body{ font-size: 16px; }
}

@media (max-width:400px){
    body{ font-size: 15px; }
}

@media (max-width:360px){
    body{ font-size: 14px; }
}

@media (max-width:320px){
    body{ font-size: 13px; }
}


